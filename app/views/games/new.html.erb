<h1>New game</h1>
<div class="container">
  <ul>
    <% @items.each do |item| %>
      <li class="inline"><%= item %></li>
    <% end %>
  </ul>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <input type="text" name="guess" placeholder="Enter your longest word..">
    <input type="submit">

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :items, @items %>
  </form>
</div>
